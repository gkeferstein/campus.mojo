{
  "name": "@campus/api",
  "version": "1.0.0",
  "description": "Campus.mojo LMS API - Fastify + TypeScript",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate deploy",
    "db:migrate:dev": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:seed": "tsx prisma/seed.ts",
    "lint": "echo 'Lint skipped - eslint not configured' || true",
    "typecheck": "tsc --noEmit",
    "test": "npm run build && node --test dist/**/*.test.js",
    "test:watch": "npm run build && node --test --watch dist/**/*.test.js"
  },
  "dependencies": {
    "@clerk/backend": "^2.29.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "@gkeferstein/tenant": "^1.0.0",
    "@prisma/client": "^5.22.0",
    "fastify": "^4.28.1",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/node": "^22.9.0",
    "eslint": "^9.18.0",
    "globals": "^15.14.0",
    "prisma": "^5.22.0",
    "typescript-eslint": "^8.20.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  }
}
